---
import Layout from '../layouts/Layout.astro';
import SimpleSwap from '../components/SimpleSwap.jsx';
import PageHeader from '../components/PageHeader';
import PageFooter from '../components/PageFooter';
---

<Layout title="Bitshares simple asset swap form">
	<main>
		<PageHeader client:only="react" page="pool" backURL="../index.html" />
		<SimpleSwap client:only="react" />
		<PageFooter client:only="react" sourceURL="https://github.com/BTS-CM/astro-ui/blob/main/src/pages/swap.astro" />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		min-height: 100vh;
	}
</style>